doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        a(href="/")
        h1 Productos
        a(href="/")
            button Back
        if existe
            table( class="table" )
                thead
                    tr
                        th ID
                        th Product
                        th Price
                        th Image
                tbody
                    each prod in productos
                        tr 
                            th=prod.id
                            td=prod.title
                            td=prod.price
                            td
                                img(src=prod.thumbnail, width="20px")
        else
            h2(class="mt-2") No hay productos